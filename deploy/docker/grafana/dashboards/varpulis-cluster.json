{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "external link",
      "includeVars": false,
      "keepTime": true,
      "tags": ["varpulis"],
      "targetBlank": true,
      "title": "Engine Metrics",
      "type": "dashboards"
    }
  ],
  "liveNow": false,
  "panels": [
    {
      "title": "Raft Consensus",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Raft Role",
      "description": "0=Follower, 1=Candidate, 2=Leader",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "varpulis_cluster_raft_role",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Follower", "color": "blue" } } },
            { "type": "value", "options": { "1": { "text": "Candidate", "color": "orange" } } },
            { "type": "value", "options": { "2": { "text": "Leader", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "green", "value": 2 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      }
    },
    {
      "title": "Current Term",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 1 },
      "targets": [
        {
          "expr": "varpulis_cluster_raft_term",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value"
      }
    },
    {
      "title": "Commit Index",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "varpulis_cluster_raft_commit_index",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value"
      }
    },
    {
      "title": "Raft Term Over Time",
      "type": "timeseries",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 1 },
      "targets": [
        {
          "expr": "varpulis_cluster_raft_term",
          "legendFormat": "Term",
          "refId": "A"
        },
        {
          "expr": "varpulis_cluster_raft_commit_index",
          "legendFormat": "Commit Index",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "title": "Workers",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 6 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Workers by Status",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 7 },
      "targets": [
        {
          "expr": "varpulis_cluster_workers_total{status=\"ready\"}",
          "legendFormat": "Ready",
          "refId": "A"
        },
        {
          "expr": "varpulis_cluster_workers_total{status=\"unhealthy\"}",
          "legendFormat": "Unhealthy",
          "refId": "B"
        },
        {
          "expr": "varpulis_cluster_workers_total{status=\"draining\"}",
          "legendFormat": "Draining",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Ready" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Unhealthy" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Draining" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "title": "Worker Counts (Current)",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 7 },
      "targets": [
        {
          "expr": "varpulis_cluster_workers_total",
          "legendFormat": "{{status}}",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "ready" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "unhealthy" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "draining" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "pieType": "donut",
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "right" }
      }
    },
    {
      "title": "Pipeline Groups & Deployments",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 7 },
      "targets": [
        {
          "expr": "varpulis_cluster_pipeline_groups_total",
          "legendFormat": "Pipeline Groups",
          "refId": "A"
        },
        {
          "expr": "varpulis_cluster_deployments_total",
          "legendFormat": "Deployments",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    },
    {
      "title": "Health Sweep Duration",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 11 },
      "targets": [
        {
          "expr": "rate(varpulis_cluster_health_sweep_duration_seconds_sum[5m]) / rate(varpulis_cluster_health_sweep_duration_seconds_count[5m])",
          "legendFormat": "Avg sweep ({{workers_checked}} workers)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      }
    },
    {
      "title": "Deployments & Migrations",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Deploy Duration",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(varpulis_cluster_deploy_duration_seconds_bucket[5m])) by (le, result))",
          "legendFormat": "p99 {{result}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(varpulis_cluster_deploy_duration_seconds_bucket[5m])) by (le, result))",
          "legendFormat": "p50 {{result}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "title": "Migration Duration",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(varpulis_cluster_migration_duration_seconds_bucket[5m])) by (le, result))",
          "legendFormat": "p99 {{result}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(varpulis_cluster_migration_duration_seconds_bucket[5m])) by (le, result))",
          "legendFormat": "p50 {{result}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "title": "Migrations Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "rate(varpulis_cluster_migrations_total{result=\"success\"}[5m])",
          "legendFormat": "Success / sec",
          "refId": "A"
        },
        {
          "expr": "rate(varpulis_cluster_migrations_total{result=\"failure\"}[5m])",
          "legendFormat": "Failure / sec",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "min": 0
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Success / sec" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Failure / sec" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "title": "Cumulative Migrations",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "varpulis_cluster_migrations_total{result=\"success\"}",
          "legendFormat": "Successful",
          "refId": "A"
        },
        {
          "expr": "varpulis_cluster_migrations_total{result=\"failure\"}",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Successful" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Failed" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    },
    {
      "title": "Cumulative Deploys",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
      "targets": [
        {
          "expr": "varpulis_cluster_deploy_duration_seconds_count{result=\"success\"}",
          "legendFormat": "Successful",
          "refId": "A"
        },
        {
          "expr": "varpulis_cluster_deploy_duration_seconds_count{result=\"failure\"}",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Successful" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Failed" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    }
  ],
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["varpulis", "cluster", "raft"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "title": "Varpulis Cluster Operations",
  "uid": "varpulis-cluster"
}
