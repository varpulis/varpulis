event StockTick {
    string symbol;
    float price;
    integer volume;
}

event FilteredTick {
    string symbol;
    float price;
}

monitor FilterBenchmarkMQTT {
    action onload() {
        monitor.subscribe("mqtt:bench/01/input");
        on all StockTick(*, >50.0, *) as t {
            send FilteredTick(t.symbol, t.price) to "mqtt:bench/01/output";
        }
    }
}
